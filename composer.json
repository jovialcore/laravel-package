{
    "name": "jovialcore/laravel-dto",
    "description": "A laravel data transfer package",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Jovialcore\\LaravelDto\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Chidiebere Chukwudi"
        }
    ],
    "require": {
        "illuminate/support": "^10.28",
        "eventsauce/object-hydrator": "^1.4"
    },
    "require-dev": {
        "pestphp/pest": "^2.24",
        "orchestra/testbench": "^8.13"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jovialcore\\LaravelDto\\Providers\\PackageServiceProvider"
            ],
            "aliases": [
                "Jovialcore\\LaravelDto\\Facades\\Hydrator"
            ]
        }
    }
}